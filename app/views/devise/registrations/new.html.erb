<div>
<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h1 class="text-center mb-4" style="font-weight:bold; color:#ffffff; font-family: monospase;">とうろく</h1>
        <div style="padding: 15px; margin-bottom: 10px; border: 13px dotted #298c75; background-color: #34b496;">


  <%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "とうろく" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
  </div>


</div>
<div class="container">
  <div class="row">
    <%= image_tag "saturn.png", :size => "400x550" %>
  </div>
</div>